<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rplrus21.framelayout.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minuman"
        android:layout_gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:translationY="10dp"
                />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="80dp"
        android:text="Lanjut"
        android:translationZ="9dp"/>

    <ImageView
        android:id="@+id/imageViewpersegipanjang"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginLeft="73dp"

        app:srcCompat="@drawable/persegipanjang" />

    <ImageView
        android:id="@+id/imageViewsegitiga"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"

        android:rotation="270"
        app:srcCompat="@drawable/segitiga" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp"
        android:rotation="60"
        app:srcCompat="@drawable/jajargenjang"
        />

    <ImageView
        android:id="@+id/imageViewkotak"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/kotak" />
</FrameLayout>
